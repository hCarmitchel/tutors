%h1= @appointment.title

- if @appointment.description.present?
  %p
    %b Description:
    = @appointment.description
- if @appointment.location.present?
  %p
    %b Location:
    = @appointment.location
- if @appointment.tutor_type.present?
  %p
    %b Study Type:
    = @appointment.tutor_type
- if @appointment.subject.present?
  %p
    %b Subject:
    = @appointment.subject.name
%p
  %b Start time:
  = @appointment.start_date
%p
  %b End time:
  = @appointment.end_date
%p
  %b Capacity:
  = @appointment.capacity
%p
  %b Current Enrollment:
  = @appointment.current_capacity
%p
  %b Tutor:
  = link_to @appointment.tutor.name, @appointment.tutor

- if current_user && current_user.id == @appointment.user_id
  = link_to 'Edit', edit_appointment_path(@appointment), class: 'btn btn-default'
= link_to 'Back', appointments_path, class: 'btn btn-default'
