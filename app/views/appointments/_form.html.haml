= form_for @appointment do |f|
  = f.hidden_field :user_id, value: current_user.id
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :location
    = f.text_field :location, class: 'form-control'
  .form-group
    = f.label :tutoring_type
    = f.select :tutor_type, tutoring_types, {include_blank: 'None'}, {class: 'form-control'}
  .form-group
    = f.label :subject
    = f.select :subject_id, Subject.all.collect {|p| [ p.name, p.id ]}, {include_blank: 'None'}, {class: 'form-control'}
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :start_time
    = f.datetime_select :start_time, class: 'form-control'
  .form-group
    = f.label :end_time
    = f.datetime_select :end_time, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-default'
