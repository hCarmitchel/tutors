.col-lg-7
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'form-control'
    .form-group
      = f.label :first_name
      = f.text_field :first_name, class: 'form-control', required: true
    .form-group
      = f.label :last_name
      = f.text_field :last_name, class: 'form-control', required: true
    .form-group
      = f.label :school
      = f.text_field :school, class: 'form-control', required: true
    .form-group
      = f.label :website
      = f.url_field :website, class: 'form-control'
    .form-group
      = f.label :phone_number
      = f.telephone_field :phone_number, class: 'form-control'
    .form-group
      = f.label :tutor_types
      = f.select :tutor_types, tutoring_types, {include_blank: 'None'}, {multiple: true, class: 'form-control'}
    .form-group
      = f.label :subjects
      = f.select :subjects, Subject.all.collect {|p| [ p.name, p.name ]}, {include_blank: 'None'}, {multiple: true, class: 'form-control'}
    .form-group
      = f.label :tutor
      = f.check_box :tutor
    .form-group
      = f.label :profile
      = f.text_area :profile, class: 'form-control'
    .form-group
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .actions.pull-right
      = f.submit "Sign up", class: 'btn btn-default'
      = render "devise/shared/links"
